{
  "root": true,
  "extends": ["next/core-web-vitals", "next/typescript"],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "plugins": ["@typescript-eslint"],
  "rules": {
    // Regras de qualidade de código
    "no-console": ["warn", { "allow": ["warn", "error"] }],
    "no-debugger": "warn",
    "no-alert": "warn",

    // TypeScript
    "@typescript-eslint/no-explicit-any": "off",
    "@typescript-eslint/no-unused-vars": [
      "warn",
      {
        "argsIgnorePattern": "^_",
        "varsIgnorePattern": "^_"
      }
    ],

    // React/Next.js
    "react/react-in-jsx-scope": "off",
    "react/prop-types": "off",
    "react/no-unescaped-entities": "off",
    "react-hooks/exhaustive-deps": "warn",

    // Boas práticas gerais
    "no-else-return": "warn",
    "no-empty-function": "warn",
    "no-unreachable": "warn",
    "eqeqeq": ["warn", "always"],
    "prefer-const": "warn",
    "no-var": "warn",

    // Complexidade
    "complexity": ["warn", 30],
    "max-depth": ["warn", 4],
    "max-params": ["warn", 5]
  },
  "ignorePatterns": [
    "node_modules",
    ".next",
    "out",
    "build",
    "dist",
    "coverage",
    "**/*.d.ts",
    "*.config.js",
    "*.config.ts"
  ]
}
